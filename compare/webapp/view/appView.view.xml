<mvc:View controllerName="com.epiuse.compare.controller.appView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">
        
    <Text id="welcomeTitle" text="Please upload files for comparison."/>
<l:VerticalLayout id="verticleLayout">
<u:FileUploader id="idfileUploader1" width="50%" sameFilenameAllowed="false" useMultipart="false" uploadUrl="/sap"
placeholder="Choose a CSV file" style="Emphasized"></u:FileUploader>
<Button id="fileUpload1" text="Upload File 1" press="uploadFile1"/>

<u:FileUploader id="idfileUploader2" width="50%" sameFilenameAllowed="false" useMultipart="false" uploadUrl="/sap"
placeholder="Choose a CSV file" style="Emphasized"></u:FileUploader>
<Button id="fileUpload2" text="Upload File 2" press="uploadFile2"/>
</l:VerticalLayout>

	<l:VerticalLayout id="verticleLay">
		<u:FileUploader
			id="fileUploader"
			name="myFileUpload"
			uploadUrl="upload/"
			tooltip="Upload your file to the local server"
			uploadComplete="handleUploadComplete"/>
		<Button
			text="Upload File"
            id="fileUpload3"
			press="handleUploadPress"/>
	</l:VerticalLayout>

<content/>

    </Page>
</mvc:View>
