<mvc:View controllerName="com.epiuse.compare.controller.appView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
    <Page id="page" title="{i18n>title}">

	<HBox>
	<VBox id="verticleLay">
	 <Text id="file1" text="Please upload file 1 for comparison."/>
     	<u:FileUploader id="FileUploaderBase" typeMissmatch="handleTypeMissmatch" change="handleValueChange"
		 maximumFileSize="10" fileSizeExceed="handleFileSize" maximumFilenameLength="50" filenameLengthExceed="handleFileNameLength"
		  multiple="false" sameFilenameAllowed="false" buttonText="Browse" fileType="CSV" style="Emphasized" placeholder="Choose a CSV file"/>
     	<Button text="Upload your first CSV file." press="onUploadBase" />
	<Text id="file2" text="Please upload file 2 for comparison."/>
     	<u:FileUploader id="FileUploaderCompare" typeMissmatch="handleTypeMissmatch" change="handleValueChange"
		 maximumFileSize="10" fileSizeExceed="handleFileSize" maximumFilenameLength="50" filenameLengthExceed="handleFileNameLength"
		  multiple="false" sameFilenameAllowed="false" buttonText="Browse" fileType="CSV" style="Emphasized" placeholder="Choose a CSV file"/>
     	<Button text="Upload your second CSV file." press="onUploadCompare" />
		</VBox>
	<VBox id="verticleLayKey" alignItems="Center">
	
	<Text id="FileOutBase" text="{/CSVBaseJson}" wrapping="true" width="700px"/>
	<Input id="KeySelection" textFormatMode="Key" placeholder="Enter CSV Keys for Comparison." width="500px"/>

	<!--<Text id="FileOut2" text="Please upload file 1 for comparison."/>-->
	<Text id="FileOutCompare" text="{/CSVCompareJson}" wrapping="true" width="700px"/>
	<Input id="RowSelection" textFormatMode="Value" placeholder="Enter CSV Keys for Comparison." width="500px"/>
	<Button text="Compare uploaded CSV files." press="onCompare" />
	<!--<html:input type="button" Value="Compare files test" onclick="compare(); showDiff();" />-->

	<Text id="Fileout" text="{/CSVGenDiff}" width="700px" wrapping="true"/>

	<html:div id="result-diff" class="span result-diff" wrapping="true" width="700px">
	</html:div>

	<Button text="Copy Results to clipboard." press="copyToClipBoard" />
	</VBox>
	</HBox>
		

	

 	
	
	
	

	

	
	


<content/>

    </Page>
</mvc:View>
