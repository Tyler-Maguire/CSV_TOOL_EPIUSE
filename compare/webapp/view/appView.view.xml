<mvc:View controllerName="com.epiuse.compare.controller.appView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">
        
   

	<l:VerticalLayout id="verticleLay">
	 <Text id="file1" text="Please upload file 1 for comparison."/>
		<u:FileUploader
			id="fileUploader"
			name="myFileUpload"
			uploadUrl="upload/"
			tooltip="Upload your file to the local server"
			uploadComplete="handleUploadComplete1"/>
		<Button
			text="Upload File 1"
            id="fileUpload1"
			press="handleUploadPress1"/>

		<Text id="file2" text="Please upload file 2 for comparison."/>	
		<u:FileUploader
			id="fileUploader2"
			name="myFileUpload2"
			uploadUrl="upload/"
			tooltip="Upload your file to the local server"
			uploadComplete="handleUploadComplete2"/>

		<Button
			text="Upload File 2"
            id="fileUpload2"
			press="handleUploadPress2"/>

		<Button
			text="Compare Files"
            id="fileComparison"
			press="handlefileComparison"/>	
	</l:VerticalLayout>

		<VBox id="test">
     <u:FileUploader id="idfileUploader" typeMissmatch="handleTypeMissmatch" change="handleValueChange" maximumFileSize="10" fileSizeExceed="handleFileSize" maximumFilenameLength="50" filenameLengthExceed="handleFileNameLength" multiple="false" width="50%" sameFilenameAllowed="false" buttonText="Browse" fileType="CSV" style="Emphasized" placeholder="Choose a CSV file"/>
     <Button id="fileUpload3" text="Upload your file" press="onUpload" type="Emphasized"/>
		</VBox>
	
	


<content/>

    </Page>
</mvc:View>
