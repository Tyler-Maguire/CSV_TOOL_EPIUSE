<mvc:View controllerName="com.epiuse.compare.controller.appView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">
        
    <Text id="welcomeTitle" text="Please upload files for comparison."/>

<l:HorizontalLayout id="horLay">
	<l:VerticalLayout id="verticleLay">
		<u:FileUploader
			id="fileUploader"
			name="myFileUpload"
			uploadUrl="upload/"
			tooltip="Upload your file to the local server"
			uploadComplete="handleUploadComplete1"/>
		<Button
			text="Upload File 1"
            id="fileUpload1"
			press="handleUploadPress1"/>
	</l:VerticalLayout>

	<l:VerticalLayout id="verticleLay2">
		<u:FileUploader
			id="fileUploader2"
			name="myFileUpload2"
			uploadUrl="upload/"
			tooltip="Upload your file to the local server"
			uploadComplete="handleUploadComplete2"/>
		<Button
			text="Upload File 2"
            id="fileUpload2"
			press="handleUploadPress2"/>
	</l:VerticalLayout>

	</l:HorizontalLayout>

<content/>

    </Page>
</mvc:View>
